{
  "name": "@felixgeelhaar/glaze-components",
  "version": "1.0.1",
  "description": "Beautiful glassmorphism Web Components built with Lit",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --pretty false && cp -r src/styles dist/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "size": "bundlesize",
    "analyze": "cem analyze --litelement"
  },
  "keywords": [
    "web-components",
    "design-system",
    "glassmorphism",
    "lit",
    "typescript",
    "accessibility",
    "ui",
    "components"
  ],
  "author": "Glaze Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glaze-design-system/glaze.git",
    "directory": "packages/components"
  },
  "homepage": "https://glaze-design-system.com",
  "bugs": {
    "url": "https://github.com/glaze-design-system/glaze/issues"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@open-wc/testing": "^4.0.0",
    "@testing-library/jest-dom": "6.6.4",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "3.2.4",
    "@web/dev-server-esbuild": "1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "axe-core": "4.10.3",
    "bundlesize": "^0.18.2",
    "eslint": "^9.33.0",
    "happy-dom": "18.0.1",
    "jest-axe": "10.0.0",
    "jsdom": "26.1.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "customElements": "dist/custom-elements.json",
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "browserslist": [
    "defaults",
    "not IE 11",
    "Chrome >= 61",
    "Firefox >= 63",
    "Safari >= 10.1",
    "Edge >= 79"
  ]
}
