{
  "name": "@glaze/engine",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "import": "./dist/preset.js",
      "require": "./dist/preset.js"
    },
    "./plugin": {
      "types": "./dist/glass.plugin.d.ts",
      "import": "./dist/glass.plugin.js",
      "require": "./dist/glass.plugin.js"
    },
    "./unocss": {
      "types": "./dist/unocss.preset.d.ts",
      "import": "./dist/unocss.preset.js",
      "require": "./dist/unocss.preset.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --pretty false",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@glaze/tokens": "workspace:*"
  },
  "peerDependencies": {
    "@unocss/core": "^0.58.0",
    "tailwindcss": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@unocss/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.11",
    "@types/node": "^24.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}